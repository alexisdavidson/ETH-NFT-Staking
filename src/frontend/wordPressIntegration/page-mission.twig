                            </div>
                          </div>
                      </div>`
        return cardHtml
      }

      const loadOpenSeaItems = async () => {
        console.log("loadOpenSeaItems...");
        const finalUrl = `${urlApi}/assets?owner=${accounts[0]}&asset_contract_address=${nftaddress}&format=json`
        console.log("Sending api call for items to " + finalUrl)

        const items = await fetch(finalUrl)
        .then((res) => res.json())
        .then((res) => {
          return res.assets
        })
        .catch((e) => {
          console.error(e)
          console.error('Could not talk to OpenSea')
          return null
        })

        console.log("OpenSea items loaded: ");
        console.log(items);

        return items
      }

