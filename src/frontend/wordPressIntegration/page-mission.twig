      const updateBalance = async function() {
        console.log("updateBalance...");
        try {
          const balance = await token.balanceOf(accounts[0]);
          console.log("balance: " + balance);
          $("#token-balance").text(fromWei(balance));
        }
        catch(error) {
          console.log("updateBalance " + error)
